<div class="auth-card auth-devise-card">
  <h2 class="mb-3">Create account</h2>
  <%= form_with model: resource, url: registration_path(resource_name), scope: :user, local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
    </div>

    <div class="mb-3">
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'Password' %>
      <% if @minimum_password_length %>
        <small class="text-muted">Min: <%= @minimum_password_length %> chars</small>
      <% end %>
    </div>

    <div class="mb-3">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Confirm password' %>
    </div>

    <div class="d-flex align-items-center gap-2">
      <button class="btn btn-white-toggle" type="submit">Register</button>
    </div>
  <% end %>

  <div class="mt-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
