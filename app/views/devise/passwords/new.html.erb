<div class="auth-card auth-devise-card">
  <h2 class="mb-3">Forgot password?</h2>
  <%= form_with url: password_path(resource_name), scope: :user, local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
    </div>

    <div class="d-flex">
      <button class="btn btn-white-toggle" type="submit">Send reset link</button>
    </div>
  <% end %>

  <div class="mt-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
