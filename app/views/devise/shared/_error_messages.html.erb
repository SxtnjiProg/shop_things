<% if resource.errors.any? %>
  <%# Keep an accessible error summary but also emit initial toasts for JS to pick up %>
  <div id="error_explanation" data-turbo-cache="false" class="visually-hidden">
    <h2>
      <%= I18n.t("errors.messages.not_saved",
                 count: resource.errors.count,
                 resource: resource.class.model_name.human.downcase)
       %>
    </h2>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>

  <%# server-rendered initial toasts (removed by toast controller) %>
  <% resource.errors.full_messages.each do |message| %>
    <div class="initial-toast" data-toast-type="error" data-toast-message="<%= j message %>"></div>
  <% end %>
<% end %>
