<div class="container mt-4">
  <h1 class="mb-4">Каталог речей (Trippie Gluck Clone)</h1>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm border-0">
          <% if product.image.present? %>
            <%= link_to image_tag(product.image, alt: product.name, class: 'card-img-top', style: 'height: 250px; object-fit: cover;'), product_path(product) %>
          <% else %>
            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 250px;">
              <%= link_to 'Фото відсутнє', product_path(product), class: 'text-muted' %>
            </div>
          <% end %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">
              <%= link_to product.name, product_path(product), class: 'text-decoration-none text-dark' %>
            </h5>
            <p class="card-text flex-grow-1"><%= product.description %></p>
            <p class="fw-bold text-success fs-5 mb-2"><%= number_to_currency(product.price, unit: ' грн') %></p>
            <div class="mt-auto">
              <% if product.stock.zero? %>
                <span class="badge bg-danger w-100 py-2">Sold out</span>
              <% else %>
                <%= button_to 'Додати в кошик', add_to_cart_path(id: product.id), method: :post, class: 'btn btn-primary w-100 mb-2' %>
                <%= link_to 'Деталі', product_path(product), class: 'btn btn-outline-secondary w-100' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>