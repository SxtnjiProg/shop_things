<div class="container mt-5" style="max-width: 600px;">
  <h2 class="mb-4">Нова категорія</h2>
  <%= form_with model: @category do |f| %>
    <div class="mb-3">
      <%= f.label :name, "Назва категорії", class: "form-label" %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>
    <div class="mb-3">
      <%= f.label :description, "Опис", class: "form-label" %>
      <%= f.text_area :description, class: "form-control", rows: 3 %>
    </div>
    <%= f.submit "Створити", class: "btn btn-primary" %>
    <%= link_to "Назад", profile_path, class: "btn btn-outline-secondary ms-2" %>
  <% end %>
  <div class="row">
  <% @categories.each do |category| %>
    <div class="col-md-4 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= category.name %></h5>
          
          <%= link_to 'Переглянути', category, class: "btn btn-primary btn-sm" %>
          
          <%# Цей блок побачить ТІЛЬКИ адмін %>
          <% if policy(category).destroy? %>
            <%= link_to 'Видалити', category_path(category), 
                data: { turbo_method: :delete, turbo_confirm: 'Видалити категорію?' }, 
                class: "btn btn-danger btn-sm" %>
          <% end %>

        </div>
      </div>
    </div>
  <% end %>
</div>
</div>